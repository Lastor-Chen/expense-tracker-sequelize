<div class="w-75 mx-auto">
  <div class="row mb-5">
    <div class="col-lg-4">
      {{!-- 下拉選單 --}}
      <div class="row">
        {{!-- 月份選單 --}}
        <div class="col-6 pl-0">
          <form action="/index" id="month" method="GET">
            <select class="form-control" name="month">
              <option value="" disabled {{#if month}}{{else}}selected{{/if}}>月份</option>
              <option value="">所有月份</option>
              {{#each monthList}}
              <option value="{{this}}" {{#ifEqual this ../month}}selected{{/ifEqual}}>{{this}}月</option>
              {{/each}}
            </select>
          </form>
        </div>
        {{!-- 分類選單 --}}
        <div class="col-6 px-0">
          <select id="filter" class="form-control mb-3" name="filter">
            <option value="" disabled selected>分類</option>
            <option value="all">全部</option>
            {{#each select}}
            <option value="{{category}}">{{category}}</option>
            {{/each}}
          </select>
        </div>
      </div>
      {{!-- 總金額 --}}
      <div class="row mb-3">
        <span class="mr-3 pl-1">總金額：</span>
        <span id="sum" class="h1 text-danger">0</span>
      </div>
    </div>
    {{!-- Chart Pie --}}
    <div class="col-lg-8">
      <canvas id="canvasPie"></canvas>
    </div>
  </div>

  {{!-- record plane --}}
  <div class="data-plane">
    {{#each records}}
      <div class="record-ls row align-items-center {{oddEven}}" data-cate="{{category}}">
        {{!-- record 內容 --}}
        <div class="record col-12 col-lg-9 p-1">
          <div class="row align-items-center justify-content-between">
            <div class="col-3 col-lg-2 pr-0 text-center">
              <i class="fas {{iconName}} kind-icon" title="{{category}}"></i>
            </div>
            <div class="col-auto pl-0">
              <h5 class="mb-0">{{name}}</h5>
              <div class="d-inline" title="日期">
                <i class="fas fa-clock"></i>
                <small>{{showDate}}</small>
              </div>
              {{#if merchant}}
                <div class="d-inline" title="店家">
                  <i class="fab fa-sourcetree"></i>
                  <small>{{merchant}}</small>
                </div>
              {{/if}}
            </div>
            <div class="col-auto ml-auto mr-2 text-right">
              <span>$</span>
              <span class="amount">{{amount}}</span>
            </div>
          </div>
        </div>
        {{!-- 按鈕群 --}}
        <div class="col-auto ml-auto my-2 col-lg-3">
          <a href="/records/{{id}}/edit" class="btn btn-primary">修改</a>
          <form class="del-form d-inline-block" action="/records/{{id}}/delete?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-secondary">刪除</button>
          </form>
        </div>
      </div>
    {{/each}}
  </div>
  
  <div class="row mt-5">
    <div class="col-12 col-lg-10 text-center">
      <a href="/records/new" class="btn btn-primary">新增支出</a>
    </div>
  </div>
</div>