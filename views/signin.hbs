<div class="row">
  <div class="col-8 col-md-6 col-lg-4 mx-auto">

    {{> alert}}

    <div class="card">
      <div class="card-body">
        <div class="text-center mb-3">
          <i class="fas fa-money-check-alt sign-icon"></i>
          <p class="card-title mb-0">Sign In</p>
        </div>
        {{!-- 表單 --}}
        <form action="/users/signin" method="POST">
          <div class="form-group">
            <input type="email" class="form-control" id="email" name="email" value="{{email}}" placeholder="sample@gmail.com" required>
          </div>
          <div class="form-group">
            <input type="password" class="form-control" id="password" name="password" placeholder="密碼 (8~12位數)"
              minlength="8" maxlength="12" required>
          </div>
          <button type="submit" class="btn btn-primary btn-block">登入</button>
        </form>

        <div class="border-bottom mt-3"></div>

        {{!-- OAuth btn --}}
        <div class="position-relative mt-3">
          <i class="fab fa-facebook-square fb-icon"></i>
          <a href="javascript:;" id="fb-btn" class="btn btn-primary btn-block">用 Facebook 繼續</a>
        </div>
        <div class="mt-4 text-center">
          <span>沒有帳號?</span>
          <a href="/users/signup">註冊</a>
        </div>
      </div>
    </div>
  </div>
</div>